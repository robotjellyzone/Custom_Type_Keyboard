<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/Keyboard_divider"/>
            <corners
                android:radius="10dp"   >
            </corners>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="4dp"    >
            </padding>
            <stroke
                android:width="1dp"
                android:color="#fdfd26" >
            </stroke>
        </shape>

    </item>

    <item android:bottom="2dp" >
        <shape android:shape="rectangle">
            <solid android:color="@color/Keyboard_background_color"/>
            <corners
                android:radius="10dp"   >
            </corners>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"    >
            </padding>

        </shape>
    </item>

</layer-list>